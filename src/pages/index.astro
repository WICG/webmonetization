---
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import Base from '../layouts/Base.astro'
import { wallets, updates } from '../data/home.ts'
import { publisherTags } from '../data/publishers.ts'
import { supporterTags } from '../data/supporters.ts'
import { developerTags } from '../data/developers.ts'
import HeroWrapper from '../components/pages/HeroWrapper.astro'
import WalletList from '../components/pages/WalletList.astro'
import PillTag from '../components/pages/PillTag.astro'
import UpdatesSection from '../components/pages/UpdatesSection.astro'
import hero from '@assets/hero-img.svg'
import publisherInactive from '@assets/audience-publisher.png'
import publisherActive from '@assets/animations/audience-publisher.mp4'
import publisherPoster from '@assets/audience-publisher-poster.png'
import supporterInactive from '@assets/audience-supporter.png'
import supporterActive from '@assets/animations/audience-supporter.mp4'
import supporterPoster from '@assets/audience-supporter-poster.png'
import developerInactive from '@assets/audience-developer.png'
import developerActive from '@assets/animations/audience-developer.mp4'
import developerPoster from '@assets/hero-developer-poster.png'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Base
  title={t('site.title')}
  description={t('site.description')}
  homePage={true}
>
  <HeroWrapper>
    <div class='hero-content'>
      <div class='heading-wrapper'>
        <h1>Revolutionizing the digital content economy</h1>
        <p class='heroTagline'>
          Web Monetization connects publishers, creators and their audiences,
          turning engagement into revenue. No friction, no barriers, no limits.
        </p>
        <a
          class='btn primary flexible hero-btn'
          href='#start'
          >Get started today</a
        >
      </div>
      <div class='hero-img'>
        <img
          src={hero.src}
          alt=''
          loading='eager'
          width={hero.width}
          height={hero.height}
        />
      </div>
    </div>
  </HeroWrapper>
  <section class='section' id="start">
    <div class='contentWrapper'>
      <div class='wallet-info'>
        <div class='wallet-content'>
          <h2 class='font-h3'>From one-time payments to pay-as-you-browse</h2>
          <p>
            Web Monetization gives publishers more revenue options and audiences
            more ways to sustain the content they love. Support can take many
            forms: from a one-time contribution to a continuous,
            pay-as-you-browse model. It all flows seamlessly while people engage
            with the content they love. Publishers earn the moment someone
            engages, while audiences contribute in real time, using a balance
            they control.
          </p>
          <p>
            Built as a growing, open protocol web standard, Web Monetization
            enables real-time wallet-to-wallet transfers through its
            free-to-use, frictionless model.
          </p>
          <p class='font-h5'>No friction, no barriers, no limits.</p>
          <h2 class='font-h3'>Compatible wallets</h2>
        </div>
        {
          wallets.length > 0 && (
            <div class='cards'>
              <WalletList cards={wallets} ctaText='Set up a wallet' />
            </div>
          )
        }
        <a
          href='https://github.com/WICG/webmonetization/pulls'
          target='_blank'
          rel='noreferrer noopener'
          data-umami-event='Home page link - GitHub PR'
          class='bold'>Do you know other wallets? Make a PR</a
        >
      </div>
    </div>
  </section>
  <section class='section audienceSection'>
    <div class='contentWrapper audience-grid'>
      <article class='audience-card publisher'>
        <div>
          <h2>I'm a publisher</h2>
          <p class='audience-desc font-h6'>and I want to get monetized</p>
          <PillTag pills={publisherTags} />
        </div>
        <div class='media-cta'>
          <img
            class='inactive audience-img'
            alt=''
            src={publisherInactive.src}
            width={publisherInactive.width}
            height={publisherInactive.height}
          />
          <video
            class='active audience-video'
            preload='metadata'
            poster={publisherPoster.src}
            width={publisherPoster.width}
            height={publisherPoster.height}
            autoplay
            loop
            muted
            playsinline
          >
            <source src={publisherActive} type='video/mp4' />
            Your browser does not support the video tag.
          </video>
          <a
            class='btn primary flexible'
            href='/publishers'
            data-umami-event='Home page link - Publishers'
            >Start earning today</a
          >
        </div>
      </article>
      <div class='divider vertical'></div>
      <article class='audience-card supporter'>
        <div>
          <h2>I'm a supporter</h2>
          <p class='audience-desc font-h6'>
            and I want to sustain the work that matters to me
          </p>
          <PillTag pills={supporterTags} />
        </div>
        <div class='media-cta'>
          <img
            class='inactive audience-img'
            alt=''
            src={supporterInactive.src}
            width={supporterInactive.width}
            height={supporterInactive.height}
          />
          <video
            class='active audience-video'
            preload='metadata'
            poster={supporterPoster.src}
            width={supporterPoster.width}
            height={supporterPoster.height}
            autoplay
            loop
            muted
            playsinline
          >
            <source src={supporterActive} type='video/mp4' />
            Your browser does not support the video tag.
          </video>
          <a
            class='btn primary flexible'
            href='/supporters'
            data-umami-event='Home page link - Supporters'
            >Support on your terms</a
          >
        </div>
      </article>
    </div>
    <div class='contentWrapper'>
      <div class='divider horizontal'></div>
      <article class='audience-card developer'>
        <div class='dev-wrapper'>
          <h2>I'm a developer</h2>
          <p class='audience-desc font-h6'>and I want to pay the web forward</p>
          <PillTag pills={developerTags} />
          <a
            class='btn primary flexible'
            href='/developers'
            data-umami-event='Home page link - Developers'>Join the community</a
          >
        </div>
        <div class='developer-images'>
          <img
            class='inactive audience-img'
            alt=''
            src={developerInactive.src}
            width={developerInactive.width}
            height={developerInactive.height}
          />
          <video
            class='active audience-video'
            preload='metadata'
            poster={developerPoster.src}
            width={developerPoster.width}
            height={developerPoster.height}
            autoplay
            loop
            muted
            playsinline
            aria-hidden='true'
          >
            <source src={developerActive} type='video/mp4' />
            Your browser does not support the video tag.
          </video>
        </div>
      </article>
    </div>
  </section>
  {
    updates && updates.length > 0 && (
      <UpdatesSection updates={updates} heading='Important Updates' />
    )
  }
</Base>

<style>
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-4xl);
  }

  .heading-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
    justify-content: space-around;
  }

  .heading-wrapper h1 {
    margin: 0;
    font: var(--font-display-2);
  }

  .hero-img {
    width: 100%;
    max-height: 50vh;
    max-width: 80vw;
    display: flex;
    align-self: center;
    justify-self: center;
  }

  .hero-img img {
    width: 100%;
    height: auto;
    max-height: 100%;
    max-width: 100%;
    aspect-ratio: 814 / 599;
    display: block;
  }

  .heroTagline {
    font: var(--font-h5);
  }

  .wallet-info {
    margin-inline: var(--spacing-md);
    padding: var(--spacing-md);
    background: var(--color-white);
    border-radius: var(--pill-rounding);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .wallet-info .wallet-content {
    display: flex;
    gap: var(--spacing-md);
    flex-direction: column;
    align-items: flex-start;
  }

  p.font-h5 {
    color: var(--helper-text-default);
  }

  .wallet-info a svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: currentColor;
  }

  .cards {
    display: flex;
    gap: var(--spacing-4xl);
    justify-content: space-around;
    align-items: center;
  }

  .audienceSection {
    margin-inline: var(--spacing-md);
  }

  .audience-grid {
    display: grid;
    grid-template-columns: 1fr 0.25rem 1fr;
    gap: var(--spacing-xs);
    align-items: start;
    margin-bottom: var(--spacing-xs);
  }

  .audience-grid > * {
    width: 100%;
    height: 100%;
  }

  .audience-card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--color-white);
    border-radius: var(--pill-rounding);
    max-width: 100%;
    justify-content: space-between;
  }

  .audience-card.developer {
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
  }

  .audience-card .btn,
  .audience-card .media-cta {
    margin-top: var(--spacing-3xl);
  }

  .dev-wrapper,
  .audience-card .media-cta {
    display: flex;
    flex-direction: column;
  }

  .audience-card.developer div {
    flex-basis: 50%;
  }

  .audience-card > div {
    width: 100%;
  }

  .audience-img,
  .audience-video {
    max-width: 30vw;
    height: auto;
    object-fit: contain;
    display: block;
  }

  .active.audience-video {
    display: none;
  }

  .audience-card {
    padding: 2rem;
    color: var(--inactive-font-color);
  }

  .audience-card:hover,
  .audience-card:focus {
    color: var(--default-font-color);
    background-color: var(--color-white);
  }

  .audience-card:hover .active.audience-video,
  .audience-card:focus .active.audience-video {
    display: block;
  }

  .audience-card:hover .inactive.audience-img,
  .audience-card:focus .inactive.audience-img {
    display: none;
  }

  .audience-card .audience-desc {
    margin-block-end: var(--spacing-lg);
  }

  .divider {
    position: relative;
    align-self: stretch;
    display: flex;
  }

  .divider.vertical {
    width: 0.25rem;
    justify-content: center;
  }

  .divider.horizontal {
    height: 0.25rem;
    width: 100%;
    align-items: center;
    margin-bottom: var(--spacing-xs);
  }

  .divider::before {
    content: '';
    position: absolute;
    border-radius: var(--fully-rounded);
    background-image: linear-gradient(
      to var(--gradient-direction),
      #7f76b2 12%,
      #f69656 30%,
      #f2797f 59%,
      #9cd6cb 90%
    );
  }

  .divider.vertical::before {
    top: var(--padding-2xl);
    bottom: var(--padding-2xl);
    left: 0;
    right: 0;
    --gradient-direction: top;
  }

  .divider.horizontal::before {
    left: calc(12.5% + var(--padding-2xl));
    right: calc(12.5% + var(--padding-2xl));
    top: 0;
    bottom: 0;
    --gradient-direction: left;
  }

  @media screen and (max-width: 767px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
      text-align: center;
    }

    .hero-btn {
      display: none;
    }

    .heading-wrapper h1 {
      font: var(--font-h2);
    }
    .section.audienceSection {
      margin-inline: 0;
    }
    .audience-card h2 {
      margin-bottom: var(--spacing-2xs);
    }

    .wallet-info .wallet-content {
      flex: 1 1 auto;
    }

    .cards {
      flex: 1 1 auto;
      align-items: stretch;
      flex-direction: column;
    }

    a.bold {
      text-align: center;
      width: 100%;
    }

    .audience-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-3xl);
      margin-bottom: var(--spacing-3xl);
    }

    .divider.vertical,
    .divider.horizontal {
      display: none;
    }

    .audience-card {
      color: var(--default-font-color);
      padding: var(--padding-md);
    }

    .audience-card h2 {
      font: var(--font-h3);
    }

    .audience-card.developer div {
      flex-basis: 100%;
    }

    .inactive.audience-img,
    .developer-images {
      display: none;
    }

    .audience-card:hover .active.audience-video,
    .audience-card:focus .active.audience-video {
      display: none;
    }

    .audience-card .media-cta {
      margin-top: 0;
    }
  }
</style>
